<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Page Title -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/workInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonEdit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workInformationLabel">

                <TableLayout
                    android:id="@+id/workInfoTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:stretchColumns="1"
                    tools:ignore="MissingConstraints">

                    <!-- Email -->
                    <TableRow>

                        <TextView
                            android:id="@+id/emailLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_label" />

                        <TextView
                            android:id="@+id/email"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Position -->
                    <TableRow>

                        <TextView
                            android:id="@+id/positionLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_label" />

                        <TextView
                            android:id="@+id/position"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Latest Salary -->
                    <TableRow>

                        <TextView
                            android:id="@+id/latestSalaryLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latest_salary_label" />

                        <TextView
                            android:id="@+id/latestSalary"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latest_salary" />

                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Department -->
                    <TableRow>

                        <TextView
                            android:id="@+id/departmentLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/department_label" />

                        <TextView
                            android:id="@+id/department"
                            style="@style/DataTextMain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/department" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Manager -->
                    <TableRow>

                        <TextView
                            android:id="@+id/managerLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manager_label" />

                        <TextView
                            android:id="@+id/manager"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manager" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Date Hired -->
                    <TableRow>

                        <TextView
                            android:id="@+id/dateHiredLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_hired_label" />

                        <TextView
                            android:id="@+id/dateHired"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_hired" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- Start Date -->
                    <TableRow>

                        <TextView
                            android:id="@+id/startDateLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_date_label" />

                        <TextView
                            android:id="@+id/startDate"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_date" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- On-going Employee -->
                    <TableRow>

                        <TextView
                            android:id="@+id/ongoingEmployeeLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <CheckBox
                            android:id="@+id/ongoingEmployee"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="@string/ongoing_employee_checkbox" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@android:color/transparent" />

                    <!-- End Date -->
                    <TableRow>

                        <TextView
                            android:id="@+id/endDateLabel"
                            style="@style/LabelTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date_label" />

                        <TextView
                            android:id="@+id/endDate"
                            style="@style/DataTextMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date" />
                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/pageTitle"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_title"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.025" />

            <!-- Work Information Label -->
            <TextView
                android:id="@+id/workInformationLabel"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="@string/work_info_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personalDetailLayout" />

            <!-- Delete Button -->

            <!-- Edit Button -->

            <Button
                android:id="@+id/buttonDelete"
                style="@style/DangerousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.652"
                app:layout_constraintStart_toEndOf="@+id/buttonEdit"
                app:layout_constraintTop_toBottomOf="@+id/workInfoLayout" />

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                app:layout_constraintTop_toBottomOf="@+id/workInfoLayout"
                app:layout_constraintVertical_bias="0.571" />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/accent"
                android:text="@string/back_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workInfoLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/personalDetailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/top_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pageTitle">

                <androidx.cardview.widget.CardView
                    android:id="@+id/roundCardView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profile_image"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/snow_white" />

                </androidx.cardview.widget.CardView>

                <!-- Personal Info Table -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/personalDetailTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/roundCardView"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        tools:ignore="MissingConstraints">

                        <!-- First Name -->
                        <TableRow>

                            <TextView
                                android:id="@+id/firstNameLabel"
                                style="@style/LabelTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/first_name_label" />

                            <TextView
                                android:id="@+id/firstName"
                                style="@style/DataTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/first_name" />
                        </TableRow>

                        <!-- To have a space between 2 rows -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@android:color/transparent" />

                        <!-- Last Name -->
                        <TableRow>

                            <TextView
                                android:id="@+id/lastNameLabel"
                                style="@style/LabelTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_name_label" />

                            <TextView
                                android:id="@+id/lastName"
                                style="@style/DataTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_name" />
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@android:color/transparent" />

                        <!-- Address Street -->
                        <TableRow>

                            <TextView
                                android:id="@+id/addressLabel"
                                style="@style/LabelTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/address_label" />

                            <TextView
                                android:id="@+id/address"
                                style="@style/DataTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/address" />

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@android:color/transparent" />

                        <!-- Birthday -->
                        <TableRow>

                            <TextView
                                android:id="@+id/cityLabel"
                                style="@style/LabelTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/city_label" />

                            <TextView
                                android:id="@+id/city"
                                style="@style/DataTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/city" />
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@android:color/transparent" />

                        <!-- Phone Number -->
                        <TableRow>

                            <TextView
                                android:id="@+id/phoneNumberLabel"
                                style="@style/LabelTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_number_label" />

                            <TextView
                                android:id="@+id/phoneNumber"
                                style="@style/DataTextTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_number" />
                        </TableRow>

                    </TableLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>